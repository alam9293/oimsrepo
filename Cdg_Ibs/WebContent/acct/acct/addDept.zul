<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<window id="addDeptWindow" border="normal" use="com.cdgtaxi.ibs.acct.ui.AddDeptWindow"
	onCreate="addDeptWindow.init()"
	title=""
	xmlns:h="http://www.w3.org/1999/xhtml">
	<grid>
    	<columns sizable="false">
			<column><label value="Department Details"/></column>
		</columns>
	</grid>
	<grid>
		<columns sizable="false" visible="false">
			<column width="25%"/>
			<column width="25%"/>
			<column width="25%"/>
			<column width="25%"/>
		</columns>
		<rows>
			<row>
				<label sclass="fieldLabel required" value="Division"/>
				<listbox id="divisionList" width="100%" rows="1" mold="select" onSelect="addDeptWindow.updateProductSubscriptions(self.getSelectedItem());addDeptWindow.updateNameOnCard(self.getSelectedItem())"/>
				<label sclass="fieldLabel required" value="Department Code"/>
				<capstextbox id="code" width="98%" maxlength="4" constraint="${c:new('com.cdgtaxi.ibs.web.constraint.RequiredCodeConstraint')}"/>
			</row><row>
				<label sclass="fieldLabel required" value="Department Name"/>
				<capstextbox id="acctName" width="98%" maxlength="80" constraint="${c:new('com.cdgtaxi.ibs.web.constraint.RequiredConstraint')}"/>
				<label sclass="fieldLabel required" value="Name on card"/>
				<capstextbox id="nameOnCard" width="98%" maxlength="22" constraint="${c:new('com.cdgtaxi.ibs.web.constraint.RequiredConstraint')}"/>
			</row><row spans="1,1,2">
				<label sclass="fieldLabel required" value="Credit Limit($)"/>
				<decimalbox id="creditLimit" width="98%" format="#######,##0.00" maxlength="13" constraint="${c:new('com.cdgtaxi.ibs.web.constraint.CreditLimitConstraint')}"/>
			</row>
		</rows>
	</grid><h:br/>
	<grid>
    	<columns sizable="false">
			<column><label value="Invoice"/></column>
		</columns>
	</grid>
	<grid>
	  <columns sizable="false" visible="false">
	    <column width="25%" height="0" />
	    <column width="25%" height="0" />
	    <column width="25%" height="0" />
	    <column width="25%" height="0" />
	  </columns>
	  <rows>
	    <row>
	      <label sclass="fieldLabel required" value="Charge To" />
	      <listbox id="chargeTo" width="100%" rows="1" mold="select"
	        onCreate="self.getItems().addAll(addDeptWindow.getChargeTos());self.setSelectedIndex(0);addDeptWindow.checkChargeTo(self.getSelectedItem())"
	        onSelect="addDeptWindow.checkChargeTo(self.getSelectedItem())" />
	      <label sclass="fieldLabel required" value="Invoice Format" />
	      <listbox id="invoiceFormat" width="100%" rows="1" mold="select"
	        onCreate="self.getItems().addAll(addDeptWindow.getInvoiceFormats());self.setSelectedIndex(0)" />
	    </row>
	    <row spans="1,1,2">
	      <label sclass="fieldLabel required" value="Invoice Sorting" />
	      <listbox id="invoiceSorting" width="100%" rows="1" mold="select"
	        onCreate="self.getItems().addAll(addDeptWindow.getInvoiceSortings());self.setSelectedIndex(0)" />
	      <label value="" />
	    </row>
      <row>
        <label sclass="fieldLabel required" value="Government eInvoice" />
        <listbox id="govtEInvFlagList" width="100%" rows="1" mold="select"
          onCreate="self.getItems().addAll(addDeptWindow.getGovtEInvFlags());self.setSelectedIndex(0)" />
        <label sclass="fieldLabel" value="Business Unit" />
        <listbox id="businessUnitList" width="100%" rows="1" mold="select"
          onCreate="self.getItems().addAll(addDeptWindow.getBusinessUnits());self.setSelectedIndex(0)" />
      </row>
      <row>
        <label sclass="fieldLabel required" value="PUBBS Billing" />
        <listbox id="pubbsFlagList" width="100%" rows="1" mold="select"
          onCreate="self.getItems().addAll(addDeptWindow.getPubbsFlags());self.setSelectedIndex(1)" />
		<label sclass="fieldLabel required" value="FI @ Govt" />
        <listbox id="fiFlagList" width="100%" rows="1" mold="select"
          onCreate="self.getItems().addAll(addDeptWindow.getFiFlags());self.setSelectedIndex(1)" />
		  </row>
		   <row>
         		<label sclass="fieldLabel required" value="Cabcharge Recurring Indicator"/>
				<listbox id="recurring" width="100%" rows="1" mold="select" onCreate="self.getItems().addAll(addDeptWindow.getOptionalBooleanList());self.setSelectedIndex(0)"/>
				<label sclass="fieldLabel" value="Cabcharge Recurring Charging Date"/>
				<div>
				<listbox id="recurringChargeDay" width="20%" rows="1" mold="select" onCreate="self.getItems().addAll(addDeptWindow.getDaysUnits());self.setSelectedIndex(0)"/> of the month
				</div>
			</row>
	  </rows>
	</grid>
	<h:br />
	<grid>
    	<columns sizable="false">
			<column><label value="Contact Information"/></column>
		</columns>
	</grid>
	<grid>
		<columns sizable="false" visible="false">
			<column width="25%"/>
			<column width="25%"/>
			<column width="25%"/>
			<column width="25%"/>
		</columns>
		<rows>
			<row>
				<label sclass="fieldLabel required" value="Billing Contact"/>
				<listbox id="billingContact" width="100%" rows="1" mold="select"/>
				<label sclass="fieldLabel required" value="Shipping Contact"/>
				<listbox id="shippingContact" width="100%" rows="1" mold="select"/>
			</row>
		</rows>
	</grid><h:br/>
	<grid>
    	<columns sizable="false">
			<column><label value="Product Subscription"/></column>
		</columns>
	</grid>
	<grid>
		<columns sizable="false" width="100%">
			<column width="21%" label="Product Type"/>
			<column width="17.25%" label="Product Discount"/>
			<column width="17.25%" label="Loyalty Plan"/>
			<column width="17.25%" label="Subscription Plan"/>
			<column width="17.25%" label="Issuance Plan"/>
			<column width="10%" label="Subscribe"/>
		</columns>
		<rows id="prodSubscriptions">
			<row spans="6">
				<hbox>
					<button label="Save" onClick="addDeptWindow.save()"/>
					<button label="Back" onClick="addDeptWindow.back()"/>
				</hbox>
			</row>
		</rows>
	</grid>
</window>