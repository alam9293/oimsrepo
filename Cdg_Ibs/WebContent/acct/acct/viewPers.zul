			<label id="createdDate"/>
		</row></rows>
	</grid><h:br/>
	<grid>
    	<columns sizable="false">
			<column><label value="Products Subscription"/></column>
		</columns>
	</grid>
	<listbox id="prodSubscriptions" onSelect="viewPersWindow.editSubscription(self.getSelectedItem())" fixedLayout="true">  
		<listhead sizable="false" width="100%">
			<listheader width="19.4%" label="Product Type"/>
			<listheader width="19.4%" label="Product Discount"/>
			<listheader width="19.4%" label="Loyalty Plan"/>
			<listheader width="19.4%" label="Subscription Plan"/>
			<listheader width="19.4%" label="Issuance Plan"/>
			<listheader width="3%"><checkbox onCheck="viewPersWindow.checkAll(self.isChecked())"/></listheader>
		</listhead>
		<listfoot>
			<listfooter span="5">
				<button id="subscribeBtn" label="Subscribe" onClick="viewPersWindow.subscribe()"/>
				<button id="unsubscribeBtn" label="Unsubscribe" onClick="viewPersWindow.unsubscribe()"/>
			</listfooter>
		</listfoot>
	</listbox><h:br/>
	<grid>
    	<columns sizable="false">
			<column><label value="Main Applicant Details"/></column>
		</columns>
	</grid>
