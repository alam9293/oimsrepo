<?xml version="1.0" encoding="UTF-8"?>

<window id="editCreditTermPlanWindow"
	title="Edit Credit Term Plan" border="normal" 
	use="com.cdgtaxi.ibs.admin.ui.EditCreditTermPlanWindow"
	xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<grid>
		<columns sizable="false">
			<column width="25%" />
			<column width="25%" />
			<column width="25%" />
			<column width="25%" />
		</columns>
		<rows>
			<row>
				<label sclass="fieldLabel" value="Credit Term Plan Name"/>
<!--				<label id="planNameLabel" />-->
				<capstextbox id="planNameTB" width="98.75%" maxlength="80"/>
			</row>
		</rows>
	</grid>
	<h:br/>
	
	<listbox id="detailList" onSelect="editCreditTermPlanWindow.editDetail()" mold="paging" multiple="true">
		<listhead sizable="false">
			<listheader label="Credit Term (Days)" sort="auto"/>
			<listheader label="Effective Date" sort="auto"/>
			<listheader label="Delete" width="60px"/>
		</listhead>
	</listbox>
	<button id="createBtn" label="New Detail" onClick="editCreditTermPlanWindow.addDetail()" />
	<h:br/>
	<h:br/>
	
	<button label="Save" id="save" onClick="editCreditTermPlanWindow.updatePlan()" />
	<button label="Back" onClick="editCreditTermPlanWindow.back()" />
</window>
