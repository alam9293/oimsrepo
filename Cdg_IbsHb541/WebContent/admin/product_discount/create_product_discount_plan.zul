<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>

<window id="createProductDiscountPlanWindow"
	title="Create Product Discount Plan" border="normal" 
	use="com.cdgtaxi.ibs.admin.ui.CreateProductDiscountPlanWindow"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<grid>
		<columns sizable="false">
			<column width="25%" />
			<column width="25%" />
			<column width="25%" />
			<column width="25%" />
		</columns>
		<rows>
			<row>
				<label sclass="fieldLabel required" value="Product Discount Plan Name"/>
				<capstextbox id="planTB" width="98.75%" maxlength="80"
					constraint="${c:new('com.cdgtaxi.ibs.web.constraint.RequiredConstraint')}"/>
			</row>
		</rows>
	</grid>
	
	<h:br />
	<button label="Save" onClick="createProductDiscountPlanWindow.createPlan()"/>
	<button label="Back" onClick="createProductDiscountPlanWindow.back()" />
</window>
