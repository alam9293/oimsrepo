<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>

<window id="manageExternalProductWindow" border="normal" use="com.cdgtaxi.ibs.product.ui.ManageNegativeExternalProductWindow"
	title="Search Negative External Product"
	xmlns:h="http://www.w3.org/1999/xhtml"
	width="98%">

	<grid>
		<columns sizable="false">
			<column width="25%"/>
			<column width="25%"/>
			<column width="25%"/>
			<column width="25%"/>
		</columns>
   		<rows>
   			<row>
   				<label sclass="fieldLabel" value="Card No Start"  />
				<decimalbox id="cardNoStartDMB"  width="98.75%" maxlength="19" />
				<label sclass="fieldLabel" value="Card No End"  />
				<decimalbox id="cardNoEndDMB"  width="98.75%" maxlength="19" />
   			</row>
   			<row>
   				<label sclass="fieldLabel">Product Type</label>
   				<listbox id="productTypeLB"
   					mold="select"
   					multiple="false"
   					width="99%"
   				/>
   				<label/>
   				<label/>
   			</row>
   			<row spans="4">
   				<hbox>
   					<button label="Search" onClick="manageExternalProductWindow.search(false)" />
   					<button label="Reset" onClick="manageExternalProductWindow.reset()" />
   				</hbox>
   			</row>
   		</rows>
   	</grid>
   	<h:br/>
   	<!--  The below grid is for Labeling Purpose 	-->
   	<grid>
	   	<columns>
	   		<column>Result</column>
	   	</columns>
   	</grid>
   	<listbox id="resultLB" >
   		<listhead sizable="true">
			<listheader label="Card No" 		sort="auto"/>
			<listheader label="Product Type" 	sort="auto"/>
			<listheader label="Created Date" 	sort="auto"/>
			<listheader label="Created By" 		sort="auto"/>
			<listheader align="center" sort="none" width="35px"><checkbox id="checkAllChkB" Tooltiptext="Click here to select all" onCheck="manageExternalProductWindow.checkAll()"/></listheader>
		</listhead>
		<listfoot>
			<listfooter span="5">
				<label value="No records found"/>
			</listfooter>
		</listfoot>
   	</listbox>
   	
   	<h:br/>
   	<button label="Add" id="createBtn" onClick="manageExternalProductWindow.create()" />
	<button label="Delete" id="deleteBtn" onClick="manageExternalProductWindow.delete()" />
</window>