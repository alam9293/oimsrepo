<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>

<window id="viewRequestWindow" border="normal" use="com.cdgtaxi.ibs.recurring.ui.ViewRecurringRequestWindow"
  title="View Recurring Request" xmlns:h="http://www.w3.org/1999/xhtml">

  <grid>
    <columns sizable="false">
      <column width="25%" />
      <column width="25%" />
      <column width="25%" />
      <column width="25%" />
    </columns>
    <rows>
      <row>
        <label sclass="fieldLabel">Request No</label>
        <label id="requestNoLbl" />
        <label sclass="fieldLabel">Status</label>
        <label id="statusLbl" />
      </row>
      <row spans="1,3">
        <label sclass="fieldLabel">Outgoing File Name</label>
        <label id="outgoingFileNameLbl" />
      </row>
      <row spans="1,1,2">
        <label sclass="fieldLabel">Request Type</label>
        <label id="requestTypeLbl" />
        <label />
      </row>
       <row spans="1,1,2">
        <label sclass="fieldLabel">a) Bill Gen Request No.</label>
        <label id="billGenRequestNoLbl" />
        <label />
      </row>
    <row>
        <label sclass="fieldLabel">b) Invoice No. From</label>
        <label id="invoiceNoFromLbl" />
        <label sclass="fieldLabel">b) Invoice No. To</label>
        <label id="invoiceNoToLbl" />
      </row>
      <row>
        <label sclass="fieldLabel">c) Account Nos</label>
        <label id="accountNosLbl" />
        <label sclass="fieldLabel">c) Invoice Date</label>
        <label id="invoiceDateLbl" />
      </row>
      <row>
        <label sclass="fieldLabel" value="d) Charging Date" />
        <label id="chargingDateLbl" />
        <label />
        <label />
      </row>
    </rows>
  </grid>
  <h:br />
  <grid>
    <columns sizable="false">
      <column>Created</column>
    </columns>
  </grid>
  <grid>
    <columns>
      <column width="25%" />
      <column width="25%" />
      <column width="25%" />
      <column width="25%" />
    </columns>
    <rows>
      <row>
        <label sclass="fieldLabel">By</label>
        <label id="createdByLabel" />
        <label sclass="fieldLabel">Date</label>
        <label id="createdDateLabel" />
      </row>
      <row>
        <label sclass="fieldLabel">Time</label>
        <label id="createdTimeLabel" />
        <label />
        <label />
      </row>
    </rows>
  </grid>
  <grid>
    <columns sizable="false">
      <column>Last Updated</column>
    </columns>
  </grid>
  <grid>
    <columns>
      <column width="25%" />
      <column width="25%" />
      <column width="25%" />
      <column width="25%" />
    </columns>
    <rows>
      <row>
        <label sclass="fieldLabel">By</label>
        <label id="lastUpdatedByLabel" />
        <label sclass="fieldLabel">Date</label>
        <label id="lastUpdatedDateLabel" />
      </row>
      <row>
        <label sclass="fieldLabel">Time</label>
        <label id="lastUpdatedTimeLabel" />
        <label />
        <label />
      </row>
    </rows>
  </grid>

  <h:br />
  <!--  The below grid is for Labeling Purpose  -->
  <grid>
    <columns>
      <column>Invoices</column>
    </columns>
  </grid>
  <listbox id="invoiceLB">
    <listhead sizable="true">
      <listheader label="Reference Id" sort="auto" />
      <listheader label="Token" sort="auto" />
      <listheader label="Amount" sort="auto" />
      <listheader label="Currency" sort="auto" />
      <listheader label="Invoice Date" sort="auto" />
      <listheader label="Invoice No" sort="auto" />
      <listheader label="Customer Account" sort="auto" />
      <listheader label="Cabcharge Card No" sort="auto" />
      <listheader label="Status" sort="auto" />
      <listheader label="Error" sort="auto" />
      
    </listhead>
  </listbox>
  
  <h:br />
  <button id="deleteBtn" label="Delete" onClick="viewRequestWindow.delete()" />
  <button id="uploadBtn" label="Upload Return File" onClick="viewRequestWindow.upload()" />
  <button label="Back" onClick="viewRequestWindow.back()" />
</window>
