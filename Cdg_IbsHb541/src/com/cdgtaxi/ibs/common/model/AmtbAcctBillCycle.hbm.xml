<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="com.cdgtaxi.ibs.common.model.AmtbAcctBillCycle" 
    table="AMTB_ACCT_BILL_CYCLE"
    dynamic-update="true"
    dynamic-insert="true"
>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="acctBillCycleNo"
        type="java.lang.Integer"
        column="ACCT_BILL_CYCLE_NO"
    >
        <meta attribute="use-in-equals">true</meta>
        <generator class="sequence">
            <param name="sequence_name">AMTB_ACCT_BILL_CYCLE_SQ1</param>
        </generator>
    </id>
    <version name="version" column="VERSION"/>

    <property
        name="billingCycle"
        type="java.lang.String"
        column="BILLING_CYCLE"
        length="1"
    >
        <meta attribute="use-in-tostring">true</meta>
        <meta attribute="use-in-equals">true</meta>
    </property>
    <property
        name="effectiveDate"
        type="java.sql.Date"
        column="EFFECTIVE_DATE"
        length="7"
    >
        <meta attribute="use-in-tostring">true</meta>
        <meta attribute="use-in-equals">true</meta>
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to AmtbAccount -->
    <many-to-one
        name="amtbAccount"
        class="com.cdgtaxi.ibs.common.model.AmtbAccount"
        not-null="true"
    >
        <meta attribute="use-in-equals">true</meta>
        <column name="ACCOUNT_NO" />
    </many-to-one>

</class>

<sql-query name="getBillableAccount">
<return-scalar column="account_no" type="integer"/>
 <![CDATA[
	select aabc.account_no
	from amtb_acct_bill_cycle aabc
	inner join 
	  (select account_no, max(effective_date) as effective_date
	  from amtb_acct_bill_cycle
	  where effective_date <= :billGenDate
	  group by account_no) temp1 on aabc.account_no = temp1.account_no and aabc.effective_date = temp1.effective_date
	inner join 
      (select distinct a.account_no
      from amtb_account a
      inner join amtb_acct_status b on a.account_no = b.account_no
      where b.acct_status != 'PA') temp2 on aabc.account_no = temp2.account_no
    inner join amtb_account acct on acct.account_no = aabc.account_no
  	inner join fmtb_ar_cont_code_master faccm on faccm.ar_control_code_no = acct.ar_control_code_no
  	inner join fmtb_entity_master fem on faccm.entity_no = fem.entity_no
	where
		aabc.billing_cycle = :billingCycle
		and fem.entity_no = :entityNo
]]>
</sql-query>

</hibernate-mapping>
