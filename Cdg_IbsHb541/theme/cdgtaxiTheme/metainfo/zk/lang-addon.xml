<?xml version="1.0" encoding="UTF-8"?> 
<language-addon> 
	<addon-name>cdgtaxiTheme</addon-name> 
	<depends>zul,zkex,zkmax</depends> 
	<language-name>xul/html</language-name> 
	<stylesheet href="~./cdgtaxiTheme/img.css.dsp" type="text/css"/> 
	
	<component>
    	<extends>textbox</extends>
		<component-name>capstextbox</component-name>
		<component-class>com.cdgtaxi.ibs.web.component.CapsTextbox</component-class>
    	<property>
      		<property-name>sclass</property-name>
      		<property-value>caps</property-value>
      	</property>
 	</component>
	<component>
		<component-name>paging</component-name>
    	<extends>paging</extends>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:com.cdgtaxi.ibs.web.component.CustomPagingRenderer</mold-uri>
		</mold>
 	</component>
	<component>
		<component-name>combobox</component-name>
    	<extends>combobox</extends>
		<component-class>com.cdgtaxi.ibs.web.component.Combobox</component-class>
 	</component>
	<component>
		<component-name>datebox</component-name>
    	<extends>datebox</extends>
		<component-class>com.cdgtaxi.ibs.web.component.Datebox</component-class>
 	</component>
	<component>
		<component-name>listbox</component-name>
    	<extends>listbox</extends>
		<component-class>com.cdgtaxi.ibs.web.component.Listbox</component-class>
 	</component>
	<component>
		<component-name>listheader</component-name>
    	<extends>listheader</extends>
		<component-class>com.cdgtaxi.ibs.web.component.Listheader</component-class>
 	</component>
 	<component>
    	<component-name>accountlabel</component-name>
    	<component-class>com.cdgtaxi.ibs.common.ui.AccountLabelMacroComponent</component-class>
   		<macro-uri>/common/account_label.zul</macro-uri>
  	</component>
  	<component>
        <component-name>decimalbox2dp</component-name>
        <extends>decimalbox</extends>
        <property>
            <property-name>format</property-name>
            <property-value>#,##0.00</property-value>
        </property>
        <property>
            <property-name>scale</property-name>
            <property-value>2</property-value>
        </property>
    </component>
</language-addon> 
